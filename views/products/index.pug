extends ../template/index
block content
    .container
        h1 Products
        .d-flex
            form.ml-auto(action="/users/search",method='GET')
                form-group.d-flex
                    input.form-control(name='q',type='text' value=ques)
                    button.btn.btn-primary.ml-2 Search
    nav(aria-label='Page navigation example')
            ul.pagination.justify-content-center
                - var n=pageNumber
                    while n>0
                        li.page-item
                            a.page-link(href=`/products?page=${n}`)=n--
    .row
        if products
            each product in products
                .col-4
                    .card(style='width: 18rem;')
                    img.card-img-top(src=product.image, alt='Card image cap')
                    .card-body
                        h5.card-title=product.name
                        p.card-text=product.description
                    a.btn.btn-primary(href='cart/'+product.id) Add To Cart
    
                