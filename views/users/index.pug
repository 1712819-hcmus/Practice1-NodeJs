extends ../template/index
block content
    .container
        h1 USERS
            a.btn.btn-primary.ml-3(href='/users/create') New
        .d-flex
            form.ml-auto(action="/users/search",method='GET')
                .form-group.d-flex
                    input.form-control(name='q',type='text' value=ques)
                    button.btn.btn-primary.ml-2 Search
        table.table
            thead
                tr
                    td Name
                    td Phone
                    td Show

            tbody
                each val in users
                    tr
                        td=val.name
                        td=val.phone
                        td 
                            a.btn.btn-primary(href='/users/'+val.id) View
            